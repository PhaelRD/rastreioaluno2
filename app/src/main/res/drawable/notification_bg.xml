<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFEB3B" />  <!-- Cor de fundo da notificação (pode alterar para o que preferir) -->
    <corners android:radius="16dp" />  <!-- Bordas arredondadas -->
